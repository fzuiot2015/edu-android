<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="14dp"
    android:background="#fffaf4">

    <RelativeLayout
        android:id="@+id/item_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/item_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="课程名"
            android:textColor="#3c3c3c"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/item_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/item_course_name"
            android:layout_marginTop="65dp"
            android:text="任课教师:"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/item_course_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/item_course_teacher"
            android:layout_marginEnd="119dp"
            android:text="西三404"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/item_course_name"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>
</RelativeLayout>
